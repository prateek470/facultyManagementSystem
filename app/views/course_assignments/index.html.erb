<style type="text/css">

</style>
<html>


<head>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag 'application' %>
  <%= yield(:head) %>


</head>

<body>
  <h1 align="center"> Schedule Course</h1>
	<table align="center">
	    <tr>
	        <td><%= link_to "Assign Faculty To Courses", faculty_courses_path, class: "btn btn-default btn-lg" %></td>
	        <td> <%= link_to "Calendar", events_path, 'data-no-turbolink' => true, class: "btn btn-default btn-lg" %></td>
	        <td> <%= link_to "Preference Summary", pref_summary_index_path, class: "btn btn-default btn-lg" %></td>

	    </tr>
	</table>
  <div class="jumbotron">
	<p>
		<%= label_tag :faculty_id, "Faculty: " %>
		<%= select_tag :faculty_id, options_from_collection_for_select(@faculties,"id","faculty_name"), :include_blank => true ,class: "btn btn-default dropdown-toggle"%>
	</p>
   </br>
   </br>
   <div id = "course_ctr"></div>
  </div>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Faculty Name</th>
      <th>Courses</th>
      <th>Assignment</th>
    </tr>
  </thead>

  <% @assignments.each do |assignment| %>
  <tbody>
    <tr>
      <td><%= assignment["faculty_name"] %></td>
      <td><%= assignment["course_name"] %></td>
      <td><%= assignment["assign"] %></td>
    </tr>
  </tbody>
  <% end %>
</table>

</body>



</html>
