<html>

<head>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag 'application' %>
  <%= yield(:head) %>


</head>

<body>
  <h1 align="center">Assign Faculty to Courses</h1>
  <table align = "center">
	    <tr>
	        <td><%= link_to "Schedule Course", course_assignments_path, class: "btn btn-default btn-lg" %></td>
	         <td> <%= link_to "Calendar", events_path, 'data-no-turbolink' => true, class: "btn btn-default btn-lg" %></td>
	        <td> <%= link_to "Preference Summary", pref_summary_index_path, class: "btn btn-default btn-lg" %></td>
	    </tr>
	</table>
  <div class="jumbotron">
    <%= form_tag :action => :select_faculty, :method => :post do %>
    <p>
	    <%= label_tag :faculty_id, "Faculty Name: " %>
	    <%= select_tag :faculty_id, options_from_collection_for_select(@faculties,"id","faculty_name"), :include_blank => true ,class: "btn btn-default dropdown-toggle"%>
	    <%= submit_tag "Select" ,class: "btn btn-primary"%>
    </p>
    <% end %>
  </div>


  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Faculty</th>
        <th>Course 1</th>
        <th>Course 2</th>
        <th>Course 3</th>
      </tr>
    </thead>

    <% @all_faculty.each do |key,val| %>
    <tbody>
      <tr>
        <td><%= val[:faculty_name] %></td>
        <td><%= val[:course1] %></td>
        <td><%= val[:course2] %></td>
        <td><%= val[:course3] %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

</body>

</html>
